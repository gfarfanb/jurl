@path = src/test/resources/file.csv
@field=file

// [assertions]
EQUALS_TO! 201 {{HTTP:status}}


### download
@method = GET

http://localhost:{{local.server.port}}/file
file=src/test/resources/file.csv
&name=downloaded.csv

// [assertions]
EQUALS_TO! 200 {{HTTP:status}}


