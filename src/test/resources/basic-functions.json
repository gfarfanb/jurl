{
    "api": {
        "protocol": "http",
        "domain": "localhost",
        "port": "{{local.server.port}}",
        "basePath": "basic",
        "headers": {
            "Content-Type": "application/json"
        }
    },
    "requests": {
        "create": {
            "endpoint": "/body",
            "method": "POST",
            "bodyContent": "{\"access\": \"{{UUID:}}\", \"name\": \"{{FULL_NAME:}}\", \"email\": \"{{EMAIL:}}\", \"nickname\": \"{{ALPHA_NUMERIC:}}\", \"amount\": {{DECIMAL:}}, \"active\": {{BOOLEAN:}}, \"coins\": {{INTEGER:}}, \"bio\": \"{{LOREM_IPSUM:}}\", \"type\": \"{{PICK_ANY:A,B,C}}\", \"timestamp\": \"{{DATE_TIME:}}\"}",
            "outputMappings": {
                "basic.functions.id": "{{HTTP:header.Resource-ID}}"
            },
            "assertions": [
                {
                    "type": "EQUALS_TO",
                    "args": [ "201", "{{HTTP:status}}" ]
                }
            ]
        },
        "obtain": {
            "endpoint": "/body/{{basic.functions.id}}",
            "method": "GET",
            "outputMappings": {
                "basic.functions.access": "{{OUT:access}}",
                "basic.functions.name": "{{OUT:name}}",
                "basic.functions.email": "{{OUT:email}}",
                "basic.functions.nickname": "{{OUT:nickname}}",
                "basic.functions.amount": "{{OUT:amount}}",
                "basic.functions.active": "{{OUT:active}}",
                "basic.functions.coins": "{{OUT:coins}}",
                "basic.functions.bio": "{{OUT:bio}}",
                "basic.functions.type": "{{OUT:type}}",
                "basic.functions.timestamp": "{{OUT:timestamp}}"
            },
            "assertions": [
                {
                    "type": "EQUALS_TO",
                    "args": [ "200", "{{HTTP:status}}" ]
                }
            ]
        },
        "update": {
            "endpoint": "/body/{{basic.functions.id}}",
            "method": "PUT",
            "bodyFilePath": "src/test/resources/basic-functions.body",
            "assertions": [
                {
                    "type": "EQUALS_TO",
                    "args": [ "204", "{{HTTP:status}}" ]
                }
            ]
        },
        "remove": {
            "endpoint": "/body/{{basic.functions.id}}",
            "method": "DELETE",
            "assertions": [
                {
                    "type": "EQUALS_TO",
                    "args": [ "204", "{{HTTP:status}}" ]
                }
            ]
        }
    }
}