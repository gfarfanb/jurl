{
    "api": {
        "protocol": "http",
        "domain": "localhost",
        "port": "{{local.server.port}}",
        "basePath": "basic",
        "headers": {
            "Content-Type": "application/json"
        }
    },
    "requests": {
        "create": {
            "endpoint": "/body",
            "method": "POST",
            "bodyContent": "{\"access\": \"{{UUID:}}\", \"name\": \"{{FULL_NAME:}}\", \"email\": \"{{EMAIL:}}\", \"nickname\": \"{{ALPHA_NUMERIC:}}\", \"amount\": {{DECIMAL:}}, \"active\": {{BOOLEAN:}}, \"coins\": {{INTEGER:}}, \"bio\": \"{{LOREM_IPSUM:}}\", \"type\": \"{{PICK_ANY:A,B,C}}\", \"timestamp\": \"{{DATE_TIME:}}\"}",
            "outputMappings": {
                "basic.functions.id": "{{HTTP:header.Resource-ID}}"
            },
            "assertions": [
                {
                    "type": "EQUALS_TO",
                    "args": [ "201", "{{HTTP:status}}" ]
                }
            ]
        },
        "obtain": {
            "endpoint": "/body/{{basic.functions.id}}",
            "method": "GET",
            "outputMappings": {
                "basic.functions.entity": "{{HTTP:response.path}}"
            },
            "assertions": [
                {
                    "type": "EQUALS_TO",
                    "args": [ "200", "{{HTTP:status}}" ]
                }
            ]
        },
        "update": {
            "endpoint": "/body/{{basic.functions.id}}",
            "method": "PUT",
            "bodyFilePath": "{{basic.functions.entity}}",
            "bodyContent": "{ \"email\": \"jurl@test.com\" }",
            "assertions": [
                {
                    "type": "EQUALS_TO",
                    "args": [ "204", "{{HTTP:status}}" ]
                }
            ]
        },
        "remove": {
            "endpoint": "/body/{{basic.functions.id}}",
            "method": "DELETE",
            "assertions": [
                {
                    "type": "EQUALS_TO",
                    "args": [ "204", "{{HTTP:status}}" ]
                }
            ]
        }
    }
}