
source src/test/resources/auth.part.http

### [api]
@protocol = http
@host = localhost
@port = {{local.server.port}}
@basePath = basic

Content-Type: application/json
Request-Catcher: {{request.catcher.identifier}}

@set-clientId = {{UUID:}}
@set-clientSecret = {{UUID:}}


### [request] create
@method = POST
@endpoint = /body

{
    "access": "{{UUID:}}",
    "name": "{{FULL_NAME:}}",
    "email": "{{EMAIL:}}",
    "nickname": "{{ALPHA_NUMERIC:}}",
    "amount": {{DECIMAL:}},
    "active": {{BOOLEAN:}},
    "coins": {{INTEGER:}},
    "bio": "{{LOREM_IPSUM:}}",
    "type": "{{PICK_ANY:A,B,C}}",
    "timestamp": "{{DATE_TIME:}}"
}

output basic.functions.id = {{HTTP/header.Resource-ID}}

assert EQUALS_TO 201 {{HTTP/status}}
